<Window x:Class="PR20.Hideandseek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR20"
        mc:Ignorable="d"
        Title="Hideandseek" Height="150" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="286*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    VerticalAlignment="Center" Height="60" Margin="0,30,0,29">
            <CheckBox x:Name="chknumber1" Content="edit1" />
            <CheckBox x:Name="chknumber2" Content="edit2"/>
            <CheckBox x:Name="chknumber3" Content="edit3"/>
            <CheckBox x:Name="chknumber4" Content="edit4"/>
        </StackPanel>
        
    </Grid>
</Window>
