                    Orientation="Horizontal" 
                    HorizontalAlignment="Left">
            <TextBox 
                x:Name="txtResult" 
                Width="700"
                FontSize="20"
                Height="30"/>
        </StackPanel>
        <StackPanel
            Grid.Row="2" 
            Orientation="Vertical" 
            VerticalAlignment="Bottom">
            <Button x:Name="btnClear"
                Click="btnClear_Click"
                FontSize="14"
                Content="Очистить" 
                Width="100" 
                Margin="5"/>
            <Button x:Name="btnNext"
                Click="btnNext_Click"
                FontSize="14"
                Content="След. Задание" 
                Width="100" 
                Margin="5"/>
            
        </StackPanel>
    </Grid>
