                    Content="f"
                    FontSize="14"
                    Width="20"
                    Click="btnF_Click" 
                    Margin="5,28,5,22"/>
            <Button x:Name="btnG" 
                    Content="g"
                    FontSize="14"
                    Width="20"
                    Click="btnG_Click" 
                    Margin="5,28,5,22" RenderTransformOrigin="0.5,0.5"/>
